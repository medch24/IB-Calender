{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/export",
      "dest": "/api/export.js"
    },
    {
      "src": "/api/evaluations/([^/]+)",
      "dest": "/api/evaluations/[id].js?id=$1"
    },
    {
      "src": "/api/evaluations",
      "dest": "/api/evaluations/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1",
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/index.html"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  }
}
